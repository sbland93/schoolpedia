<header>공지사항</header>
<!--공지사항 등록 페이지-->
<form class="form-horizontal createInfoForm" role="form" action="/info" method="POST">
	<div class="form-group">
		<label for="infoTitle" class="col-sm-2 control-label">제목</label>
		<div class="col-sm-9">
			<input type="text" class="form-control" required name="title" id="infoTitle">
		</div>
		</br>
	
		<label for="infoContent" class="col-sm-2 control-label">내용</label>
		<div class="col-sm-9">
			<textarea class="form-control" name="content" required id="infoContent" rows="10"></textarea>
		</div>
		
		<div class="col-xs-12 col-sm-offset-2 col-md-offset-2">
			<button type="submit" class="btn btn-default buttonGroup">저장</button>
		</div>
	</div>
</form>

{{#section 'jquery'}}
	<script type="text/javascript" src="/js/api/info.js"></script>
	<script type="text/javascript" src="/js/controllers/infoController.js"></script>
{{/section}}