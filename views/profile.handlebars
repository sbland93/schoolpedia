<!--NameSpace: PP -->
<h1>Profile Page, This page include profile and sorting TODO</h1>

<div class="profile">
	<p><b>충호{{profile.bugName}}이름{{profile.name}}</b></p><button>충호수정하기</button>
	{{#each profile.feature}}
	<ul>
		<li>특징: {{feature}} up: {{up}} down: {{down}}</li>
	</ul>
	{{/each}}
	<button>특징추가하기</button>

	{{#each profile.schools}}
		학교: {{school.name}}
		{{#each class}}
			학급: {{this}}반
		{{/each}}
	{{/each}}
		
	<div id="profileStories">
		{{#each profile.stories}}
			<p class="storyContents">관련일화: {{content}}</p>
			up: {{up}} down: {{down}}
		{{/each}}
	</div>
	<button>관련일화쓰기</button>

	{{#each profile.replies}}
		<ul>
			<li>유저: {{user}} / 방명록: {{content}}</li>
		</ul>
	{{/each}}
	<button>방명록쓰기</button>

	<p class="updated_at">프로필 생성시간:{{profile.updated_at}}</p>	

</div>




