<h1>Profile Page, This page include profile and sorting TODO</h1>

<div class="profile">
	<p><b>{{profile.name}}</b></p>
	<p>{{profile.highSchool.name}}</p>
	<p>{{profile.middleSchool.name}}</p>
	<p>{{profile.elementarySchool.name}}</p>
	<p>{{profile.description}}</p>
	<p class="updated_at">{{profile.updated_at}}</p>	
</div>

<a class="btn btn-default" href="/school/{{schoolInfo.id}}/update" id="updateProfile">수정</a>
<button class="btn btn-default" id="removeProfile">삭제</button>



{{#section 'jquery'}}
	<script type="text/javascript" src="/js/api/profile.js"></script>
	<script type="text/javascript">
	$('#removeProfile').on('click', function(evt){
		evt.preventDefault();
		deleteProfile('{{profile.id}}').then(function(data){
			if(data.success) location.href = document.referrer;
			else alert('Error occured');
		}).catch(function(){
			alert('Error occured')
		});
	});
	</script>
{{/section}}