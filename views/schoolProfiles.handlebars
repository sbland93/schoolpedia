<header>{{schoolInfo.name}}</header>
<div class="col-md-4">
	<ul class="profileList">
		{{#each profileList}}
			<a href="/profile/{{id}}">
				<li>
				<p>{{#each schools}}
					{{school.name}}
				{{/each}}</p>
				<p>이름:{{name}} 졸업년도: {{graduation}} {{school.name}}</p>
				</li>
			</a>
		{{/each}}
	</ul>
</div>
<!--프로필검색 form -->
<div class="col-md-8">
	<form class="form-horizontal searchProfilesForm" role="form" action="api/profile/search" method="GET">
	
		<div class="form-group">
			<label class="col-md-3 control-label">학교</label>
			<label><input type='radio' name='school' value='all' id="allSchool"/>모든학교</label>
			<label><input type='radio' name='school' value='only' id="onlySchool" checked/>특정학교</label>
			<label id="onlySchoolTPL"><input type="text" name="schoolName" value="{{schoolInfo.name}}"></label>
		</div>

		<div class="form-group">
			<label for="fields" class="col-md-3 control-label">검색범위</label>
			<input type="radio" name="fields" value="only" id="fields" checked> 이름
			<input type="radio" name="fields" value="all" id="fields"> 본문포함(일화속 친구 포함)
		</div>

		<div class="form-group">
			<label for="searchField" class="col-md-3 control-label">검색내용</label>
			<div class="col-md-6">
				<input type="text" class="form-control" name="q" id="searchField" placeholder="검색...">
			</div>
		</div>

		<div class="form-group">
			<label for="fieldGraduation" class="col-md-3 control-label">졸업년도</label>
			<div class="col-md-6">
				<input type="text" class="form-control" name="graduation" id="fieldGraduation" placeholder="예) 1992, 1988">
			</div>
		</div>

		<div class="form-group">
			<label for="classNum" class="col-md-3 control-label">학급</label>
			<div class="col-md-6">
				<input type="text" class="form-control" name="classNum" id="classNum" placeholder="예) 107, 212, 314">
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-9 col-md-offset-9">
				<button type="submit" class="btn btn-default buttonGroup">검색</button>
				<a href="/profile/newOne?school={{schoolInfo.id}}" class="btn btn-default buttonGroup">프로필생성</a>
			</div>
		</div>

	</form>
	<div class="col-md-offset-3">
		<div id="searchedFriendsTPL"></div>
	</div>
</div>



{{#section 'jquery'}}
	<script type="text/javascript" src="/js/api/profile.js"></script>
	<script type="text/javascript" src="/js/controllers/schoolProfilesController.js"></script>
{{/section}}