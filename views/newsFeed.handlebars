
<!--NameSpace : HM -->
<header>
	스 쿨 충
</header>


<!--학교 검색  -->
<div class="col-md-4">
	
	{{#each posts}}
		<div>
			
			<a href="/board/{{id}}">{{title}}</a>: 
			
		</div>
		{{content}}
		<div>
			{{school.name}}
		</div>
		</br>
		{{else}}

	
		아직회원님은 출신학교 정보가 저장되어 있지 않아, 관심글들을 추천해드리기 어려워요.
		<button class="btn btn-sm btn-default" id="addSchool">학교추가하기</button>
	{{/each}}
	
</div>
<div class="col-md-4">
	

	<!--학교 리스트 목록 !-->
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="resultDivision">
				
					<div id="searchResult">	
					</div>
			</div>
			
		</div>
	</div>
</div>
<div class="col-xs-11 col-md-4">
	
		<h2>친구 검색</h2>
		<form class="searchProfileForm">
			<div class="col-md-9">
				<input type="text" class="form-control" name="name" placeholder="친구이름!!">
			</div>
			<button class="btn btn-default buttonGroup" type="submit">검색!</button>
		</form>
	
	<!--친구검색결과가 들어갈 TPL -->
	<div id="searchedProfileListTPL"></div>
</div>	






{{#section 'head'}}
	<script type="text/javascript" src="/js/templates/templates.js"></script>
	<link rel="stylesheet" type="text/css" href="/css/home.css">
{{/section}}


{{#section 'jquery'}}
	<script type="text/javascript" src="/js/controllers/newsFeedController.js"></script>
	<script type="text/javascript" src="/js/api/user.js"></script>
	<script type="text/javascript" src="/js/api/school.js"></script>
	<script type="text/javascript" src="/js/api/profile.js"></script>
{{/section}}
