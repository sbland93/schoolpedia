<!--NameSpace : NP-->
<h3>프로필생성</h3>

<form class="form-horizontal newProfileForm" id="newProfileForm" role="form" action="/api/profile" method="POST">
	<div class="form-group">
		<label for="fieldName" class="col-sm-2 control-label">이름</label>
		<div class="col-sm-4">
			<input type="text" class="form-control" required name="name" id="fieldName">
		</div>
	</div>
	<div class="form-group">
		<label for="gender" class="col-sm-2 control-label">성별</label>
		<div class="col-sm-4">
			<input type="radio" name="gender" value="true" id="gender" checked> 남자
  			<input type="radio" name="gender" value="false" id="gender"> 여자<br>
		</div>
	</div>
	<div class="form-group">
		<label for="fieldAge" class="col-sm-2 control-label">나이</label>
		<div class="col-sm-2">
			<select name="age" class="form-control" id="fieldAge">
				{{#iterateFromTo 1960 1997}}
					<option value="{{this}}">{{this}}</option>
				{{/iterateWithPlus}}
			</select>
		</div>
	</div>

	<!--DOLATER Hidden -->
	<input type="hidden" id="NPdefaultValue" schoolId="{{schoolInfo.id}}" schoolName="{{schoolInfo.name}}" category="{{schoolInfo.category}}">
	
	<div class="schoolDiv">
		<div class="form-group">
			<label for="schoolInput" class="col-sm-2 control-label">출신학교</label>
			<div class="col-sm-2">
				<input class="form-control schoolInput" type="text" id="schoolInput" value="{{schoolInfo.name}}">
			</div>
			<button class="btn btn-danger col-sm-1 checkSchool" disabled>학교 확인</button>
		</div>
		<!--schoolId필요, isElementary-->
		<input type="hidden" value="{{schoolId}}" name="{{category}}">
		<div class="form-group">
			<label for="class" class="col-sm-2 control-label">1학년 학급</label>
			<div class="col-sm-4">
				<select class="form-control" name="{{category}}Class" id="class">
					<option value="100">기억이 잘안나요</option>
					{{#iterateFromTo 101 125}}
						<option value="{{this}}">{{this}}</option>
					{{/iterateFromTo}}
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="class" class="col-sm-2 control-label">2학년 학급</label>
			<div class="col-sm-4">
				<select class="form-control" name="{{category}}Class" id="class">
					<option value="100">기억이 잘안나요</option>
					{{#iterateFromTo 201 225}}
						<option value="{{this}}">{{this}}</option>
					{{/iterateFromTo}}
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="class" class="col-sm-2 control-label">3학년 학급</label>
			<div class="col-sm-4">
				<select class="form-control" name="{{category}}Class" id="class">
					<option value="300">기억이 잘안나요</option>
					{{#iterateFromTo 301 325}}
						<option value="{{this}}">{{this}}</option>
					{{/iterateFromTo}}
				</select>
			</div>
		</div>
		{{#if isElementary}}
		<div class="form-group">
			<label for="class" class="col-sm-2 control-label">4학년 학급</label>
			<div class="col-sm-4">
				<select class="form-control" name="{{category}}Class" id="class">
					<option value="400">기억이 잘안나요</option>
					{{#iterateFromTo 401 425}}
						<option value="{{this}}">{{this}}</option>
					{{/iterateFromTo}}
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="class" class="col-sm-2 control-label">5학년 학급</label>
			<div class="col-sm-4">
				<select class="form-control" name="{{category}}Class" id="class">
					<option value="500">기억이 잘안나요</option>
					{{#iterateFromTo 501 525}}
						<option value="{{this}}">{{this}}</option>
					{{/iterateFromTo}}
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="class" class="col-sm-2 control-label">6학년 학급</label>
			<div class="col-sm-4">
				<select class="form-control" name="{{category}}Class" id="class">
					<option value="600">기억이 잘안나요</option>
					{{#iterateFromTo 601 625}}
						<option value="{{this}}">{{this}}</option>
					{{/iterateFromTo}}
				</select>
			</div>
		</div>
		{{/if}}
	</div>

	<button id="addSchoolInput" class="btn btn-default">출신학교 추가</button>

	<div class="form-group">
		<label for="fieldStory" class="col-sm-2 control-label">이야기</label>
		<div class="col-sm-4">
			<textarea class="form-control stories" name="stories" rows="20" placeholder="이 학생에 대한 설명, 함께 있었던 일, 일화, 성격, 특징 등" required></textarea>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-5 col-sm-3">
			<button type="submit" class="btn btn-default">글생성</button>
			<button class="btn btn-default goBack">취소</button>
		</div>
	</div>
</form>




{{#section 'head'}}
	<script type="text/javascript" src="/js/templates/templates.js"></script>
{{/section}}

{{#section 'jquery'}}
	<script type="text/javascript" src="/js/api/profile.js"></script>
	<script type="text/javascript" src="/js/api/school.js"></script>
	<script type="text/javascript" src="/js/controllers/newProfileController.js"></script>
{{/section}}


