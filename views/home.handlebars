</header>


<!--학교 검색  -->

	<form action="/api/school" class="form-horizontal searchSchoolForm" role="form" method="GET" id="searchSchool">
		<div class="form-group">
			<input type="text" name="name" placeholder="학교명을 검색해보세요!">
			<button class="btn btn-default" type="submit">검색!</button>
		</div>
	</form>

	<!--학교 리스트 목록 !-->
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="resultDivision">
				<div class="col-sm-7 col-md-7">
					<div id="searchResult">	
					</div>
				</div>
				<hr>
				<div class="col-sm-5 col-md-5">
				<h2>공지사항</h2>
				
					{{#each infoList}}
					<ul>
						<li><a href="/info/{{id}}">{{title}}</a></li>
					</ul>
					{{/each}}
				</div>
				
			</div>
			
		</div>
	</div>



