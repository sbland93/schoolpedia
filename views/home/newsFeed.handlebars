<!--NameSpace : HM -->
<header>
	뉴스피드
</header>

<!--학교 검색  -->

<div class="col-md-offset-2 col-md-6">
	{{#if userInfo.schools}}
		{{#if (checkBoolean (lengthOf userInfo.schools) "<" 3)}}
			<p>
				현재({{{lengthOf userInfo.schools}}})개의 학교({{#each userInfo.schools}} {{name}} {{/each}})의 커뮤니티글만 받아보는 중이에요! 초,중,고 모두 받아볼 수 있어요!
				<button class="btn btn-default btn-sm pull-right" id="addSchool">남은학교추가하기</button>
				<div id="addSchoolTPL"></div>
				<br />
			</p>
		{{/if}}
		<p>
			{{#each userInfo.schools}}
				<a href="/school/{{id}}/board/new" class="btn btn-default">{{name}}글쓰기</a>
			{{/each}}
		</p><br>
		
		<label><em>학교커뮤니티 최신글</em></label>
		{{#each posts}}
			{{> board this}}
		{{else}}
			현재 회원님의 학교 ({{#each userInfo.schools}} <a href="/school/{{id}}">{{name}}(click!) </a>{{/each}})에 아직 첫글이 존재하지 않는것 같아요! 중요한 글이 될 첫 글을 남겨보세요!
		{{/each}}
	{{else}}
		아직회원님은 출신학교 정보가 저장되어 있지 않아, 학교 커뮤니티 글들을 추천해드리기 어려워요.
		<button class="btn btn-sm btn-default" id="addSchool">학교추가하기</button>
		<div id="addSchoolTPL"></div>
	{{/if}}
</div>
<div class="col-md-4">
	<label><em>최신생성프로필</em></label>
	<ul>
	{{#each profileList}}
		<li>
			<a href="/profile/{{id}}">{{name}}</a>
			{{#each schools}}
				{{school.name}}
			{{/each}}
		</li>
		
	{{/each}}
	</ul>
</div>
{{#section 'jquery'}}
	<script type="text/javascript" src="/js/api/user.js"></script>
	<script type="text/javascript" src="/js/api/profile.js"></script>
	<script type="text/javascript" src="/js/templates/controllers/newsFeedTPLC.js"></script>
	<script type="text/javascript" src="/js/controllers/home/newsFeedController.js"></script>
{{/section}}
