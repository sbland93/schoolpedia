<!-- NameSpace: SB -->
<link rel="stylesheet" type="text/css" href="/css/schoolboard.css">
<header>게시물</header>


<div class="row">
	<div class="col-md-12">
		<div class="col-sm-9 col-md-6">
			<ul class="boardList">
				{{#each boardList}}
					<a href="/board/{{id}}">
						<li>
							제목: {{title}}
							<p>내용: {{content}}</p>
						</li>
					</a>
				{{/each}}

			</ul>
		</div>
		<div class="col-sm-12 col-md-5">
			<form class="form-horizontal searchBoardForm" id="searchBoardForm" role="form" action="/api/board" method="GET">
				<input type="hidden" name="schoolId" value="{{schoolInfo.id}}" id="defaultSchoolId">
				
				<div class="form-group">
					<label for="schoolDetail" class="col-sm-3 col-md-3 control-label">학교</label>
					<div class="col-sm-9 col-md-9">
						<input type="radio" name="school" value="here" id="schoolDetail" checked>{{schoolInfo.name}}내에서
						<input type="radio" name="school" value="all" id="schoolDetail"> 모든학교에서
					</div>
				</div>

				<div class="form-group">
					<label for="field" class="col-sm-3 col-md-3 control-label">제목/내용</label>
					<div class="col-sm-9 col-md-9">
						<input type="radio" name="field" value="title" id="field" checked> 제목
						<input type="radio" name="field" value="all" id="field"> 제목 + 본문
					</div>
				</div>

				<div class="form-group">
					<label for="searchField" class="col-sm-3 col-md-3 control-label">검색내용</label>
					<div class="col-sm-8">
						<input type="text" class="form-control" name="q" id="searchField" placeholder="검색..." required>
						<button type="submit" class="btn btn-default">검색</button>
					</div>
				</div>
			</form>
		</div>
	</div>

	<div id="searchedBoardsTPL"></div>
	
</div>
<div class="col-xs-offset-4">
	<a href="/school/{{schoolInfo.id}}/board/new" class="btn btn-default">글쓰기</a>
</div>

{{#section 'head'}}
	<script type="text/javascript" src="/js/templates/templates.js"></script>
{{/section}}



{{#section 'jquery'}}
	<script type="text/javascript" src="/js/api/board.js"></script>
	<script type="text/javascript" src="/js/controllers/schoolBoardController.js"></script>
{{/section}}