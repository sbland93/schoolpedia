

<!--EP에서 특징추가하기를 누르면 나오는 template -->

<form class="form-horizontal addFeatureForm" role="form" action="/api/profile/{{profileId}}" method="PUT" profileId="{{profileId}}">

	<!--특징추가 form-->
	<div class="form-group">

		<div class="col-xs-12 col-sm-11 col-md-12">
			<textarea class="form-control" name="feature" id="fieldFeature" required></textarea>
		</div>
		<!--추가 버튼-->
		<div class="col-xs-12 col-md-12">
			<button type="submit" class="btn btn-default btn-sm">추가</button>
			<button class="btn btn-default btn-sm" id="cancelAddFeature">취소</button>
		</div>	
	</div>
</form>
