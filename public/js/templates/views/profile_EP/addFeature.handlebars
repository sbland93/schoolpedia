

<!--EP에서 특징추가하기를 누르면 나오는 template -->

<form class="form-horizontal addFeatureForm" role="form" action="/api/profile/{{profileId}}" method="PUT" profileId="{{profileId}}">

	<!--특징추가 form-->
	<div class="form-group">
		<label class="col-md-12 col-sm-12 col-xs-12">별명</label>
		<div class="col-xs-12 col-sm-8 col-md-7">
			<textarea class="form-control" name="feature" id="fieldFeature" placeholder="상대가 싫어할 수 있는 별명은 제외해주세요!" required></textarea>
		</div>
		<!--추가 버튼-->
		<div class="col-xs-12 col-md-12">
			<button type="submit" class="btn btn-default btn-sm buttonGroup">추가</button>
			<button class="btn btn-default btn-sm buttonGroup" id="cancelAddFeature">취소</button>
		</div>	
	</div>
</form>
