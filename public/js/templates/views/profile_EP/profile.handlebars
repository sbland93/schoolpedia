<header class="bugName">{{profile.name}}</header>

<div class="row">
	<div class="col-md-offset-10">
	</div>
</div>
<div class="row">
	<div class="col-md-offset-4">
		
		{{#each profile.schools}}
			<span>학교</span>: <a class="updateClass" schoolId={{school._id}}>{{school.name}}</a>
			<span>학급</span>:
			{{#each class}}
				{{#ifDefaultClass this}}
					<a class="updateClass" schoolId={{../school._id}}>?</a>
				{{else}}
					<a href="/profile/search?school=only&schoolId={{../school._id}}&fields=only&graduation={{../../profile.graduation}}&classNum={{this}}">{{this}}반</a>
				{{/ifDefaultClass}}
			{{/each}}
			</br>
		{{/each}}
	</div>
</div>