
<form class="form-horizontal updateSchoolForm" role="form" action="/api/school" method="PUT">
	<!--controller에서 id를 가져오기 위해 추가된 From-->

	<!--제목부분-->
	<div class="form-group">

		<label for="fieldDescription" class="col-sm-2 control-label">소개글수정</label>
		<div class="col-sm-4">
			<input type="text" class="form-control" required name="description" id="fieldDescription">
		</div>
	
	</div>

	<!--수정, 취소 버튼-->
	<div class="form-group">
	
		<div class="col-sm-offset-2 col-sm-1">
			<button type="submit" class="btn btn-default">수정</button>
		</div>

	</div>
</form>
<div class="col-sm-offset-2 col-sm-1">
	<button class="btn btn-default" id="cancelUpdateDescription">취소</button>
</div>